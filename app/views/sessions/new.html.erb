<div style='text-align: center;'>
  <%= form_tag '/login', method: :post do %>

  <%= label_tag :email %><br>
  <%= text_field_tag :email %><br>

  <%= label_tag :password %><br>
  <%= password_field_tag :password %><br>

    <%= submit_tag "Log in", class: 'btn btn-primary my-2' %><br>
  <% end %>
</div>
